<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_blue"
    android:orientation="horizontal"
    android:paddingEnd="@dimen/main_title_padding"
    android:paddingLeft="@dimen/main_title_padding"
    android:paddingRight="@dimen/main_title_padding"
    android:paddingStart="@dimen/main_title_padding">

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:drawableLeft="@drawable/ic_action_previous_item"
        android:drawableStart="@drawable/ic_action_previous_item"
        android:gravity="center"
        android:paddingBottom="@dimen/main_title_padding"
        android:paddingTop="@dimen/main_title_padding" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_pick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:paddingBottom="@dimen/main_title_padding"
            android:paddingTop="@dimen/main_title_padding"
            android:text="@string/vehicles_choice"
            android:textColor="@color/font_red_holo"
            android:textSize="@dimen/main_title_font_size" />

        <RadioButton
            android:id="@+id/radio_pull"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="@dimen/main_title_padding"
            android:paddingTop="@dimen/main_title_padding"
            android:text="@string/pull_test"
            android:textSize="@dimen/main_title_font_size" />

        <RadioButton
            android:id="@+id/radio_kingpin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="@dimen/main_title_padding"
            android:paddingTop="@dimen/main_title_padding"
            android:text="@string/kingpin_test"
            android:textSize="@dimen/main_title_font_size" />

        <RadioButton
            android:id="@+id/radio_rear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="@dimen/main_title_padding"
            android:paddingTop="@dimen/main_title_padding"
            android:text="@string/rearAxle_show"
            android:textSize="@dimen/main_title_font_size" />

        <RadioButton
            android:id="@+id/radio_front"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="@dimen/main_title_padding"
            android:paddingTop="@dimen/main_title_padding"
            android:text="@string/frontAxle_show"
            android:textSize="@dimen/main_title_font_size" />

        <RadioButton
            android:id="@+id/radio_print"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="@dimen/main_title_padding"
            android:paddingTop="@dimen/main_title_padding"
            android:text="@string/data_print"
            android:textSize="@dimen/main_title_font_size" />

    </RadioGroup>

</LinearLayout>